<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/toolbarLightColor</item>
        <item name="colorPrimaryDark">@color/toolbarDarkColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="GoogleNowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/fg_now_bg_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textColor">#707070</item>
    </style>

</resources>