<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <stroke
                android:width="2dp"
                android:color="#ffcdd2" />

            <solid
                android:color="#ffcdd2" >
            </solid>

            <corners
                android:radius="8dp" />

            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />

        </shape>

    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#f44336" />
            <solid
                android:color="#f44336" >
            </solid>
            <corners
                android:radius="8dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
</selector>

